<%= form_with(model: video, class: "contents") do |form| %>
  <% if video.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(video.errors.count, "error") %> prohibited this video from being saved:</h2>

      <ul class="list-disc ml-6">
        <% video.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :library_id %>
    <%= form.text_field :library_id, class: ["block shadow-sm rounded-md border outline-hidden px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": video.errors[:library_id].none?, "border-red-400 focus:outline-red-600": video.errors[:library_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :guid %>
    <%= form.text_field :guid, class: ["block shadow-sm rounded-md border outline-hidden px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": video.errors[:guid].none?, "border-red-400 focus:outline-red-600": video.errors[:guid].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :title %>
    <%= form.text_field :title, class: ["block shadow-sm rounded-md border outline-hidden px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": video.errors[:title].none?, "border-red-400 focus:outline-red-600": video.errors[:title].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :captions %>
    <%= form.checkbox :captions, class: ["block shadow-sm rounded-md border outline-hidden mt-2 h-5 w-5", {"border-gray-400 focus:outline-blue-600": video.errors[:captions].none?, "border-red-400 focus:outline-red-600": video.errors[:captions].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
